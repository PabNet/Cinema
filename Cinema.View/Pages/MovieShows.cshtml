@page
@model Cinema.View.Pages.MovieShowsModel

@{
    ViewData["Title"] = Model.Title;
}

<div class="line-hor"></div>
<div class="box">
    <div class="border-right">
        <div class="border-left">
            <div class="inner">
                <h3 style="text-align: center">Список <span>киносеансов</span></h3>
                <div style="margin-left: 43%;" class="wrapper">
                    <a href="/MovieShowForm" class="link2">
                        <span>
                            <span>Добавить</span>
                        </span>
                    </a>
                </div>
                @if (Model.MovieShows.Count != default)
                {
                    <ul class="list">
                        @foreach (var movieShow in Model.MovieShows)
                        {
                            <li>
                                <a>@movieShow.Movie (@movieShow.Time @movieShow.Date)</a><br/>
                                @movieShow.Cinema.Name
                                <div>
                                    <a href="/MovieShowForm/?id=@movieShow.Id" class="link2" style="margin-right: 20px">
                                        <span>
                                            <span class="button">Изменить</span>
                                        </span>
                                    </a>
                                </div>
                                <div>
                                    <a href="/MovieShows/?handler=Delete&id=/@movieShow.Id" class="link2">
                                        <span>
                                            <span class="button">Удалить</span>
                                        </span>
                                    </a>
                                </div>
                            </li>
                        }
                    </ul>
                }
            </div>
        </div>
    </div>
</div>
